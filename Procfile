sass:     sass --watch ext/assets/stylesheets/src:ext/assets/stylesheets/ --style compressed --sourcemap=none
jade:     jade --watch ext/views/*/*.jade --out ext/views
coffee1:   coffee --watch --compile --join ext/assets/javascripts/browser-action.js ext/assets/javascripts/src/browser_action/*.coffee
coffee2:   coffee --watch --compile --join ext/assets/javascripts/background.js ext/assets/javascripts/src/background/*.coffee
coffee3:   coffee --watch --compile --join ext/assets/javascripts/edit.js ext/assets/javascripts/src/edit/*.coffee