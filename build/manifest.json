{
  "name": "Trellosnap",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Trello bug reporting tool that allows you to take website screenshots, annotate them, and upload to Trello with a couple clicks.",
  "homepage_url": "https://github.com/yulianglukhenko/trellosnap",
  "icons": {
    "16": "assets/images/icons/icon16.png",
    "48": "assets/images/icons/icon48.png",
    "128": "assets/images/icons/icon128.png"
  },
  "background": {
    "scripts": ["assets/javascripts/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "assets/images/icons/icon48.png",
    "default_title": "Trellosnap",
    "default_popup": "views/browser-action.html"
  },
  "permissions": [
    "tabs",
    "*://*/*",
    "<all_urls>"
  ]
}