{
  "name": "Trellosnap",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Bug reporting tool that allows you to screenshot the viewport or custom selection and post it to Trello as a card.",
  "homepage_url": "http://glukhenko.com",
  "icons": {
    "16": "assets/images/icons/icon16.png",
    "48": "assets/images/icons/icon48.png",
    "128": "assets/images/icons/icon128.png"
  },
  "background": {
    "scripts": ["assets/javascripts/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "assets/images/icons/icon19.png",
    "default_title": "Trellosnap",
    "default_popup": "views/browser-action.html"
  },
  "permissions": [
    "tabs",
    "*://*/*",
    "<all_urls>"
  ]
}